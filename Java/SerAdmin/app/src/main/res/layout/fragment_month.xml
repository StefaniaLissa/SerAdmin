<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="@dimen/medium_margin">

    <ImageView
        android:id="@+id/widget_month_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/zround_background" />

    <ImageView
        android:id="@+id/left"
        style="@style/ArrowStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/mes"
        android:layout_alignBottom="@+id/mes"
        android:paddingStart="@dimen/medium_margin"
        android:paddingEnd="@dimen/medium_margin"
        android:src="@drawable/zic_flecha_izquierda" />

    <TextView
        android:id="@+id/mes"
        style="@style/MonthStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/right"
        android:layout_toEndOf="@+id/left"
        android:gravity="center"
        android:lines="1"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/medium_margin"
        android:textSize="@dimen/month_text_size"
        tools:text="Enero"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/right"
        style="@style/ArrowStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/mes"
        android:layout_alignBottom="@+id/mes"
        android:layout_toStartOf="@+id/top_new_event"
        android:paddingStart="@dimen/medium_margin"
        android:paddingEnd="@dimen/medium_margin"
        android:src="@drawable/zic_flecha_derecha" />

    <ImageView
        android:id="@+id/top_new_event"
        style="@style/ArrowStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/mes"
        android:layout_alignBottom="@+id/mes"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/medium_margin"
        android:paddingEnd="@dimen/medium_margin"
        android:src="@drawable/ic_plus_vector" />

    <include
        android:id="@+id/semana"
